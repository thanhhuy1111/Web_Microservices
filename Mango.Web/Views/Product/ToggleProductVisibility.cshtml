@model ProductDto

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">Toggle Product Visibility</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-12">
                <p>Are you sure you want to toggle the visibility of the product <strong>@Model.Name</strong>?</p>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <form method="post" asp-action="ToggleProductVisibilityConfirmed" asp-route-productId="@Model.ProductId">
                    <button type="submit" class="btn btn-primary">Confirm</button>
                    <a asp-action="ProductIndex" class="btn btn-secondary">Cancel</a>
                </form>

            </div>
        </div>
    </div>
</div>
